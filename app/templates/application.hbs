<div class="container-fluid main-container">
  <nav class="header navbar navbar-fixed-top navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button {{action "toggleNav"}} type="button" class="navbar-toggle collapsed visible-xs-inline" >
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <ul class="nav navbar-nav">
              <li class="navbar-brand">Embercatch{{webTwoDotOh}}r</li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
              {{#if session.isAuthenticated}}
                <li class="navbar-text">{{session.user.email}}</li>
                <li><a href="#" class="navbar-link" {{action "logout"}}>Log Out</a></li>
              {{else}}
                <li>{{#link-to 'login' class="navbar-link"}}Sign In / Create Account{{/link-to}}</li>
              {{/if}}
            </ul>

        </div>
    </div>
  </nav>
  <div id="main">
    <div {{bind-attr class=":row :main-row :row-offcanvas showNav:active"}}>
        <div class="col-xs-8 col-sm-4 main-nav sidebar-offcanvas" role="navigation">
            {{side-bar}}
        </div>
        <section class="col-xs-12 col-sm-8 main-content">
            {{outlet}}
        </section>
    </div>
  </div>
  <footer id="footer" class="row">
     <div class="col-sm-4">
        {{audio-player}}
    </div>
    <div class="col-sm-8">
    </div>
  </footer>
</div>
